<Window x:Class="GestorMensajesInstitucionales.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestor de Mensajes Institucionales" Height="720" Width="1200" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" HorizontalAlignment="Stretch">
            <ComboBox x:Name="TipoRegistroFilter" Width="140" Margin="0,0,10,0" PlaceholderText="Tipo registro">
                <ComboBoxItem Content="Todos"/>
                <ComboBoxItem Content="Mensaje"/>
                <ComboBoxItem Content="Volante"/>
            </ComboBox>
            <ComboBox x:Name="TipoFlujoFilter" Width="140" Margin="0,0,10,0" PlaceholderText="Flujo">
                <ComboBoxItem Content="Todos"/>
                <ComboBoxItem Content="Recibido"/>
                <ComboBoxItem Content="Enviado"/>
            </ComboBox>
            <TextBox x:Name="TemaFilter" Width="180" Margin="0,0,10,0" PlaceholderText="Temas" />
            <DatePicker x:Name="DesdeFilter" Width="140" Margin="0,0,10,0"/>
            <DatePicker x:Name="HastaFilter" Width="140" Margin="0,0,10,0"/>
            <Button Content="Filtrar" Width="90" Click="OnFiltrarClick" />
            <Button Content="Nuevo" Width="90" Margin="10,0,0,0" Click="OnNuevoClick" />
        </StackPanel>

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <DataGrid x:Name="RegistrosGrid" AutoGenerateColumns="False" Grid.Column="0" Grid.Row="0" Margin="0,0,10,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tipo" Binding="{Binding TipoRegistro}" Width="80"/>
                    <DataGridTextColumn Header="Flujo" Binding="{Binding TipoFlujo}" Width="80"/>
                    <DataGridTextColumn Header="Asunto" Binding="{Binding Asunto}" Width="*"/>
                    <DataGridTextColumn Header="Clasificación" Binding="{Binding ClasificacionSeguridad.Nombre}" Width="120"/>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding FechaCreacion}" Width="140"/>
                </DataGrid.Columns>
            </DataGrid>

            <Grid Grid.Column="1" Grid.Row="0" Margin="10,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
                    <WebBrowser x:Name="PdfViewer" />
                </Border>
                <GroupBox Header="Adjuntos comprimidos" Grid.Row="1">
                    <ListBox x:Name="AdjuntosList" />
                </GroupBox>
            </Grid>

            <StatusBar Grid.Row="1" Grid.ColumnSpan="2">
                <StatusBarItem Content="Sesión activa" />
            </StatusBar>
        </Grid>
    </DockPanel>
</Window>
